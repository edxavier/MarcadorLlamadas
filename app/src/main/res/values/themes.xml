<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarcadorLlamadas" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_deep_orange_500</item>
        <item name="colorPrimaryDark">@color/md_deep_orange_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>

    </style>


    <!-- Splash Screen Theme. -->
    <style name="Fullscreen" parent="Theme.MarcadorLlamadas">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="App.Caption" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>